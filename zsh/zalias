# ------
# alias
# ------
alias ll='ls -lFh'
alias la='ls -lFha'
alias df='df -h'
alias irb='pry'
alias grep='grep --color=auto'
alias history='history -i'
alias mkdir='mkdir -p'

alias timeadjust='sudo service ntpd start' # for linux VM working on VirtualBox

