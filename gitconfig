[alias]
  a     = add
  b     = branch
  bd    = branch -D
  ch    = checkout
  co    = commit -v
  d     = diff
  ds    = diff --stat
  dw    = diff --color-words
  s     = status --branch --short
  l     = log --decorate
  ls    = log --stat --decorate
  lg    = log --graph --abbrev-commit --pretty=oneline
  lp    = log --decorate --patch-with-stat
  today = log --oneline --since='24 hour ago'
